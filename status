# i3status configuration file
# Minimalist monochrome setup

general {
    output_format = "i3bar"
    colors = true
    interval = 5
    color_good = "#FFFFFF"
    color_degraded = "#AAAAAA"
    color_bad = "#666666"
}

order += "tztime local"

wireless _first_ {
    format_up = " %essid"
    format_down = ""
}

ethernet _first_ {
    format_up = " eth"
    format_down = ""
}

tztime local {
    format = " %a %d %b  %H:%M "
}
